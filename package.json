{
	"name": "testhelper",
	"displayName": "TestHelper",
	"description": "A command for opening corresponding test files.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onCommand:testhelper.open",
    "onCommand:testhelper.run"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "testhelper.open",
				"title": "Open Test"
      },
      {
				"command": "testhelper.run",
				"title": "Run Test"
			}
    ],
    "menus": {
      "editor/context": [
        {
          "command": "testhelper.open",
          "group": "navigation"
        },
        {
          "command": "testhelper.run",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Test Helper",
      "properties": {
        "testhelper.mappings": {
          "type": "object",
          "default": {},
          "description": "Map test directories to file directories here."
        }
      }
    }
  },
  
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
